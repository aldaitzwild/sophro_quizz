{% extends 'base.html.twig' %}
{% set score = game.score %}
{% set total = game.quizzQuestions | length %}

{% block body %}
    <main class="container-fluid d-flex align-items-center justify-content-center">
        <div id="home_open_menu" class="col-12 col-lg-4  border border-4 rounded text-center bg-white">
            <h3>Ce quizz est terminé</h3>

            <p class="row col-12">
                <div class="col-12">
                    <img class="img-fluid mx-auto d-block" src="https://i.giphy.com/8UF0EXzsc0Ckg.gif">
                </div>
            </p>

            <h1 class="{% if score >= total / 2 %}text-success{% else %}text-danger{% endif %}">
                {{ score }} / {{ total }}
            </h1>

            <a href="{{ path('app_home')}}">Retour à l'accueil</a>
        </div>
    </main>
{% endblock %}
